---
import { Image } from "astro:assets";
import AkashLogo from "@/assets/logos/akash-logo-footer.png";
import AkashLogoDark from "@/assets/logos/akash-logo-footer-dark.png";
const { width = 270, height = 41 } = Astro.props;
---

<Image
  src={AkashLogo}
  alt="footer-logo-dark"
  width={width}
  height={height}
  class="h-[21px] w-auto dark:hidden"
/>
<Image
  src={AkashLogoDark}
  alt="footer-logo-dark"
  width={width}
  height={height}
  class="hidden h-[21px] w-auto dark:block"
/>
