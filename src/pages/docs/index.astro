    </div>
    <h1 class="mt-6 text-[28px] font-bold md:mt-10 md:text-3lg">
      {doc.data.title}
    </h1>
    <p class="mt-6 text-base md:text-lg">{doc.data.description}</p>
  </div>

  <article class={proseClasses}>
    <Content />
  </article>

  <NextPrevNav nav={findPrevAndNextPages(docs, pathname)} />
</DocsLayout>
