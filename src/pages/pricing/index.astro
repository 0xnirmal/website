---
import Layout from "@/layouts/layout.astro";
import { Pricing } from "@/components/pricing-page/pricing.tsx";
---

<Layout
  title="  GPU Availability and Pricing"
  description="  GPU Availability and Pricing"
  image="/meta-images/gpus.png"
>
  <section
    class="container mx-auto flex max-w-[1380px] flex-col gap-12 pt-12 md:gap-[4.5rem] md:pt-[100px]"
  >
    <h1
      class="text-center text-[28px] font-semibold leading-none md:text-2lg md:font-bold lg:text-3lg lg:leading-10"
    >
      Explore pricing<br class="md:hidden" /> and calculate<br /> your costs or earnings
    </h1>
    <div
      class="sidebar-scroll flex items-center overflow-x-auto md:overflow-x-hidden lg:justify-center"
    >
      <Pricing client:load />
    </div>
  </section>
</Layout>
